<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kosta.iot.mammoth.drone.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome androne"
        android:textSize="50px"/>

    <TextView
        android:id="@+id/adu_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arduino state : not found..."
        android:textSize="50px"/>

    <TextView
        android:id="@+id/azimuth_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"/>
    <TextView
        android:id="@+id/pitch_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"/>
    <TextView
        android:id="@+id/roll_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:textSize="45px"
        android:text="Arduino Console"
        android:background="#0019fc"
        android:gravity="center_horizontal"
        android:textColor="#ff2200" />
    <TextView
        android:id="@+id/rece_tv"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:scrollbars="vertical"
        android:textSize="25px"
        android:background="#000000"
        android:textColor="#ffffff"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/server_info_tv"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="Server state : ready..."
            android:textSize="50px"/>
        <Button
            android:id="@+id/socket_btn"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Open"/>
    </LinearLayout>

    <TextView
        android:id="@+id/joy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="55px" />
    <TextView
        android:id="@+id/pid_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="55px" />
</LinearLayout>
